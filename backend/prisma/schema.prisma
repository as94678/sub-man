// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?  // Google 用戶不需要密碼，設為可選
  name      String
  provider  String   @default("local") // local, google
  googleId  String?  @unique @map("google_id") // Google 用戶的唯一 ID
  avatar    String?  // Google 頭像 URL
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 關聯
  subscriptions Subscription[]
  settings      UserSettings?

  @@map("users")
}

model UserSettings {
  userId       Int    @id @map("user_id")
  baseCurrency String @default("USD") @map("base_currency")
  theme        String @default("light")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // 關聯
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model Subscription {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  name        String
  price       Decimal
  currency    String
  renewalDate DateTime @map("renewal_date")
  category    String
  color       String   @default("#3B82F6")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // 關聯
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}